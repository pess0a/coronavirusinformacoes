<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pessoadev.coronavirusinformacoes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.pessoadev.coronavirusinformacoes.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pessoadev.coronavirusinformacoes.presentation.dashboard.DashboardActivity"/>
        <activity android:name="com.pessoadev.coronavirusinformacoes.presentation.countries.CountriesActivity" />
        <activity android:name="com.pessoadev.coronavirusinformacoes.presentation.countryDetail.CountryDetailActivity" />
        <activity android:name="com.pessoadev.coronavirusinformacoes.presentation.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>